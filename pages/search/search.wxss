/* pages/search/search.wxss */
.searchContainer{
    padding: 0 20rpx;
}
.header{
    display: flex;
    height: 60rpx;
    line-height:60rpx; 
    padding:10rpx 0;
}
.searchicon{
    position: absolute;
    left: 15rpx;
}
.searchinput{
    position: relative;
    flex: 1;
    background: rgba(237,237,237,0.3);
    border-radius: 30rpx;
}

.cancle{
    width: 100rpx;
    text-align: center;
}
.searchinput input{
    margin-left: 50rpx;
    height: 60rpx;
}
.placeholder{
    /* color: #d43c33; */
    font-size: 28rpx;
}
/* 热搜榜 */
.hotContainer .title{
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1rpx solid #f3d0c5;
}
.hotList{
    display: flex;
    flex-wrap: wrap;
}
.hotItem{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}
.hotItem .order{
    margin: 0 10rpx;
}
.hotItem .iconimage{
    position: relative;
    top: 10rpx;
    width: 35rpx;
    height: 35rpx;
    margin-left: 10rpx;
}
/* 搜索内容展示 */
.searchContent{
    color : #d43c33;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid #d43c33;
}  
.searchItem{
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}
.searchItem .content{
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #f3d0c5;
}
/* 历史记录 */
.history{
    position: relative;
    display: flex;
    flex-wrap: wrap;

    line-height: 50rpx;
    margin: 20rpx 0;
}
.history .historytitle{
    font-size: 28rpx;
    height: 50rpx;

}
.history .historyItem{
    font-size: 26rpx;
    height: 50rpx;
    background: #ededed;
    margin-left: 20rpx;
    padding:0 20rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}
.history .delete{
    position: absolute;
    bottom: 0rpx;
    right: 5rpx;
    font-size: 30rpx;
}